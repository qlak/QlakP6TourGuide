<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:background="#AAAAAA"/>

    <TextView
        android:id="@+id/story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="#444444"
        android:layout_below="@id/top_bar"
        tools:text="A STORY story story and history bla blablabla blabla blabla and blabla bla blabla and blabla without bla and blablabla because blablabla. Alongside with blabla and bla and another bla."/>

    <TextView
        android:id="@+id/bottom_bar"
        android:layout_below="@id/story"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:background="#AAAAAA"/>
</RelativeLayout>